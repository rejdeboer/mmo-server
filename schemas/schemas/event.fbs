include "common.fbs";

namespace mmo;

table EntityMoveEvent {
	entity_id: uint64;
	position: Vec3; 
	direction: Vec2;
}

table EntitySpawnEvent {
	entity_id: uint64;
}

table EntityDespawnEvent {
	entity_id: uint64;
}

union EventData {
	EntityMoveEvent,
	EntitySpawnEvent,
	EntityDespawnEvent,
}

table Event {
	data: EventData (required);
}

table BatchedEvents {
	// server_tick: uint;
	events: [Event];
}

root_type BatchedEvents;
