namespace mmo;

enum ChannelType: ubyte {
  Say,
  Yell,
  Guild,
  Party,
  Whisper,
  Trade,
}

table ClientChatMessage {
  channel: ChannelType;
  recipient_id: int32;
  text: string (required);
}

table ServerChatMessage {
  channel: ChannelType;
  author_name: string;
  text: string (required);
}
