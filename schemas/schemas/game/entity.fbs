include "common.fbs";

namespace game;

table Vitals {
	hp: int32;
	max_hp: int32;
}

table PlayerAttributes {
	character_id: int32;
	guild_name: string;
}

union EntityAttributes {
	PlayerAttributes
}

table Entity {
	id: uint64;
	attributes: EntityAttributes;
	name: string (required);
	transform: game.Transform (required);
	vitals: Vitals (required);
	level: int32;
}
