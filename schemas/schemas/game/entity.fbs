include "common.fbs";

namespace game;

struct Vitals {
	hp: int32;
	max_hp: int32;
}

table PlayerAttributes {
	character_id: int32;
	guild_name: string;
}

table NpcAttributes {}

union EntityAttributes {
	PlayerAttributes,
	NpcAttributes
}

table Entity {
	id: uint64;
	attributes: EntityAttributes;
	name: string (required);
	transform: game.Transform (required);
	vitals: Vitals (required);
	level: int32;
	movement_speed: uint16;
}
