include "chat.fbs";
include "common.fbs";
include "entity.fbs";

namespace game;

table EntityMoveEvent {
	entity_id: uint64;
	transform: game.Transform;
}

table EntitySpawnEvent {
	entity: game.Entity;
}

table EntityDespawnEvent {
	entity_id: uint64;
}

table PongEvent {
	sequence: uint32;
}

union EventData {
	EntityMoveEvent,
	EntitySpawnEvent,
	EntityDespawnEvent,
	PongEvent,
	game.ServerChatMessage,
}

table Event {
	data: EventData (required);
}

table BatchedEvents {
	// server_tick: uint;
	events: [Event];
}

root_type BatchedEvents;
